video{
    width: 100%;
    height: 400rpx;
    position: fixed;
    top: 0;
    z-index: 200;
    overflow: hidden
    }
.top{
 margin-top: 430rpx;
}
.ms{
    width: 94%;
    margin-left: 3%;
    margin-right: 3%;
    font-family: "微软雅黑";
    font-size: 30rpx;
    margin-top: 20rpx;
    float: left
}

#videoClass{
    background: #B88252;
    width: 150rpx;
    padding: 10rpx;
    text-align: center;
    color: white;
}
#videoMore{
    float: right;
    font-size: 28rpx;
    color: #999999;
    margin-right: 3%;
}
.videoItem image{
    width: 100%;
    float: left;
    height:  240rpx;
    
}
.videoItem{     
    margin-top: 20rpx;
    float: left;
    width: 45.5%;
    margin-left: 3%;
}
.videoTitle{
    font-size: 35rpx;
    white-space: nowrap;
    overflow: hidden;
    margin-top: 250rpx;
    text-overflow: ellipsis;
    width: 100%;
}
.videoDesc{
 font-size: 30rpx;
 white-space: nowrap;
 text-overflow: ellipsis;
 overflow: hidden;
 width: 100%;
 color: #999999
}
.title{
    margin-left: 25rpx;
    color: #222222;
    font-family: "微软雅黑";
    margin-top: 10rpx;
    font-size: 35rpx;
    font-weight: bold;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    width: 80%
}
.bfNum{
