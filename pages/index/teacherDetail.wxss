/* pages/index/teacherDetail.wxss */
@import "../../wxParse/wxParse.wxss";
page{
    background: #333536;
    height: 100%;
}
.contain{
    display: flex;
    flex-direction: column;
    height: 100%
}
.top{
    flex: 1;text-align: center;
}
.bottom{
    flex: 3;
    background: white;
    border-top-left-radius: 70rpx;
    border-top-right-radius: 70rpx;
    margin-top: 30rpx;
    padding: 10rpx;
}
.top image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 200rpx;
    
    margin-top: 40rpx;
}
.im1{
    width: 30rpx !important;
    height: 30rpx  !important;
}
.line{
    margin-left: 10rpx;
    margin-right: 10rpx;
}
.tName{
    text-align: center;
    margin-top: 8rpx;
    color: white;
    font-family: "微软雅黑";
    font-size: 32rpx;
    font-weight: 600;
}
.info{
    text-align: center;
    margin-top: 20rpx;
    color: white;
    font-size: 28rpx;
}
.topArray{
    display: flex;
    flex-direction: row
}
.topArray view{
    flex: 1;
    text-align: center;
    margin-top: 20rpx;
    font-family: "微软雅黑";
    font-size: 35rpx;
}
.tInfo{
    margin-top: 40rpx;
    font-family: "微软雅黑";
    width: 100%;
}
.itemV{
     width: 100%;
    display: flex;
    flex-direction: row;
    margin-top: 35rpx;
}
.itemV  .nv{
    flex: 1;
     margin-left: 40rpx;
     font-size: 30rpx;
}
.itemV  .vv{
    flex: 2;
    margin-right: 40rpx;
    color: #999999;
     font-size: 30rpx;
}
.ideaTitle{
     font-size: 35rpx;
     color: #555555;
     white-space: nowrap;
     font-weight: 600

}
.date{
     font-size: 35rpx;
     color: #999999;
}
.ideaDesc{
    margin-top: 10rpx;
    color: #999999;
     font-size: 28rpx;
}
.dv{
    max-height: 100rpx;
     text-overflow: ellipsis;
     overflow: hidden;
     margin-top: 10rpx;
     line-height: 35rpx;
     text-align: justify;
}
.vv{
  text-overflow: ellipsis;
  overflow: hidden; 
 
}


